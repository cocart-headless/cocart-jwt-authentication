	],
	"author": "CoCart Headless, LLC",
	"author_uri": "https://cocartapi.com",
	"homepage": "https://cocartapi.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/cocart-headless/cocart-jwt-authentication.git"
	},
	"bugs": {
		"url": "https://github.com/cocart-headless/cocart-jwt-authentication/issues"
	},
	"requires": "6.0",
	"requires_php": "7.4",
	"tested_up_to": "6.7",
	"wc_requires": "7.0",
	"wc_tested_up_to": "9.7",
